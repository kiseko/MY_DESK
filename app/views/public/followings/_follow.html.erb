<% following = current_user.followings.find_by(following_user_id: user.id) %>
<% if following.present? %>
  <%= link_to user_following_path(user, following.id), method: :delete, remote: true do %>
    <div class="follow-button-field">
      <button type="button" class="follow-flame following-button">フォロー中</button>
      <button type="button" class="follow-flame unfollow-button">フォロー解除</button>
    </div>
  <% end %>
<% else %>
  <%= link_to user_followings_path(user), method: :post, remote: true do %>
    <div class="follow-button-field">
      <button type="submit" class="follow-flame follow-button">フォローする</button>
    </div>
  <% end %>
<% end %>